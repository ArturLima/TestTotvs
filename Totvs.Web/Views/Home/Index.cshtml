@{
    ViewBag.Title = "Home Page";
}

<div class="well">
    <div class="row">
        <div class="col-xs-12">
            <h3>Pedido de Venda</h3>
        </div>

        <div class="col-xs-12 col-md-3">
            <label>Cliente:</label>
            @Html.DropDownList("customers", ViewBag.customers as MultiSelectList, new { @class = "form-control" })
        </div>

        <div class="col-xs-12 col-md-2">
            <label>Data Entrega:</label>
            <input type="date" id="DeliveryDate" class="form-control" />
        </div>
    </div>

    <div class="row">
        <div class="col-xs-12 col-md-3">
            <label>Produto:</label>
            @Html.DropDownList("products", ViewBag.products as MultiSelectList, new { @class = "form-control" })
        </div>

        <div class="col-xs-12 col-md-2">
            <label style="color: transparent">*</label>
            <button id="AddProduct" class="form-control btn btn-success"><span class="fa fa-plus"></span> Adicionar</button>
        </div>
    </div>

    <hr />

    <div class="row">
        <div class="col-xs-12">
            <h4>Itens do Pedido</h4>
        </div>

        <div class="col-md-6">
            <table id="MyTable" class="table table-hover table-striped table-bordered" style="width:100%">
                <thead>
                    <tr>
                        <th>Produto</th>
                        <th>Qtd</th>
                        <th>Valor Total</th>
                        <th>Ação</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6" style="text-align: right;">
            <label id="Totalvalue">0</label>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6" style="text-align: right;">
            <button class="btn btn-primary" id="SaveOrder"><span class="fa fa-check"></span> Salvar</button>
        </div>
    </div>
</div>

@section scripts {
    <script>
        $(document).ready(function () {
            ProductOrderController.init();
        });
    </script>
}
